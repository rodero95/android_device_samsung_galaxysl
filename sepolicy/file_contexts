# We shifted /data/data stuff around
/data/app/.*                                        u:object_r:app_data_file:s0
/data/data                                          u:object_r:system_data_file:s0

# RIL
/dev/ttyS0                                          u:object_r:radio_device:s0
/dev/onedram                                        u:object_r:radio_device:s0
/radio(/.*)?                                        u:object_r:rild_file:s0

# Bluetooth
/dev/ttyS1                                          u:object_r:hci_attach_dev:s0

# GFX
/dev/pvrsrvkm                                       u:object_r:powervr_device:s0
/system/bin/pvrsrvinit                              u:object_r:pvrsrvinit_exec:s0

# Sensors
/system/bin/geomagneticd                            u:object_r:geomagneticd_exec:s0
/system/bin/orientationd                            u:object_r:orientationd_exec:s0

# Hardware codec
# TODO: Fix this for latona. 
/dev/s3c-mfc                                        u:object_r:mfc_device:s0
/dev/s3c-jpg                                        u:object_r:mfc_device:s0

# GPS
# TODO: Fix GPS device for latona.
/dev/s3c2410_serial1                                u:object_r:gps_device:s0

# Bluetooth
/system/bin/bdaddr_read                             u:object_r:bdaddr_read_exec:s0

# Advanced settings
# TODO: sysfs_writable may not be a good choice
/sys/class/misc/notification/bl_timeout             u:object_r:sysfs_writable:s0